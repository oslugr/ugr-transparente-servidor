doctype html

html(lang="es")
	head
		title UGR Transparente | Universidad de Granada
		meta(http-equiv="Content-Type", content="text/html; charset=UTF-8")
		meta(name="description", content="Universidad de Granada - UGR transparente")
		meta(name="keywords", content="universidad, Granada, UGR transparente, ley de transparencia")
		link(rel="shortcut icon", href="/img/general/favicon.ico", type="image/vnd.microsoft.icon")
		link(rel="icon", href="/img/general/favicon.ico", type="image/vnd.microsoft.icon")
		link(href='lib/fullcalendar/dist/fullcalendar.css', rel='stylesheet')
		link(href='lib/fullcalendar/dist/fullcalendar.print.css', rel='stylesheet', media='print')
		link(rel='stylesheet', href='lib/jquery-ui/themes/smoothness/jquery-ui.min.css')
		link(rel='stylesheet', href='lib/lightbox2/dist/css/lightbox.min.css')
		link(rel="stylesheet", id="css-style", type="text/css", href="/css/style.css", media="all")
		link(rel="stylesheet", id="css-style2", type="text/css", href="/css/style2.css", media="all")

		case seccion
			when "Inicio"
				block scripts
			when "Buscador"
				script(type='text/javascript', src="/lib/jquery/dist/jquery.min.js")
				script(type='text/javascript' src='/script/buscar.js')
			when "Calendario"
				script(type='text/javascript', src='/lib/moment/min/moment.min.js')
				script(type='text/javascript', src='/lib/jquery/dist/jquery.min.js')
				script(type='text/javascript', src='/lib/fullcalendar/dist/fullcalendar.min.js')
				script(type='text/javascript', src='/lib/fullcalendar/dist/gcal.js')
				script(type='text/javascript').
					var calendario = $.noConflict(true);
				script(type='text/javascript', src='/script/calendario.js')
			default
				script(type='text/javascript', src='/lib/jquery/dist/jquery.min.js')
				script(type='text/javascript', src='/lib/jquery-ui/jquery-ui.min.js')
				script(type='text/javascript', src="/lib/underscore/underscore-min.js")
				script(type='text/javascript' src='/https://www.google.com/jsapi')
				script(type='text/javascript', src="/http://jquery-csv.googlecode.com/git/src/jquery.csv.js")
				script(type='text/javascript').
					var tabla = $.noConflict(true);
				script(type='text/javascript', src="/script/generar_tabla.js")

		script(type='text/javascript').
			function mostrar_menu(nombre){
				var menu=document.getElementById(nombre);

				if(menu.style.display == "none"){
					menu.style.display = "block";
				}else
					menu.style.display = "none";
			}

	body
		noscript
			p(class="jsDisabled")
				| Esta página requiere funcionalidades JavaScript. Por favor,
				a(href = "http://www.enable-javascript.com/es/" target="_blank")  habilítelo
				|  para una correcta visualización.

		div(id="boxes")
			div(id="dialog" class="window" hidden)
				img(id="close",src="/imagenes/close.png", alt="close", longdesc="cerrar")
				h1#titulo_tabla
				div(id="tabla")
			div(id="mask")
		div(id="contenedor_margenes" class="")
			div(id="contenedor" class="")
				div(id="cabecera" class="")
					h1#cab_inf UGR Transparente
					a(href="http://www.ugr.es" id="enlace_ugr") Universidad de Granada
					span.separador_enlaces |
					a(href="/" id="enlace_stack") UGR Transparente
					span.separador_enlaces |
					a(href="http://www.ugr.es/pages/administracion" id="enlace_eadministracion") Administración electrónica

					div#buscador
						h2 Buscador del portal
						form(action="buscador.html" method="GET" class="mod-buttons")
							#formulario_buscar.mod-buttons
								#buscador-input
									label(id="buscar" for="sq")
										input(class="with_default_value" type="text" name="query" id="sq" placeholder="Búsqueda..."
										title="Búqueda")
									label(id="enviar_buscar" for="submit_buscar")
										input(type="image" src="/./img/transp.gif" alt="iniciar búsqueda" name="submit" id="submit_buscar" class="image-buscar"
										title="Enviar búsqueda")

				block content
				#banners
					.mod-banners
						ul
							li(class="banner_container model-resaltado-02 showtext")
								a(class="banner", href="http://opendata.ugr.es")
									strong Portal OpenData UGR
									p(class="texto_banner") Portal para la publicación y consulta de datos abiertos de la Universidad de Granada

							li(class="banner_container model-resaltado-02 showtext")
								a(class="banner", href="http://dge.ugr.es/transparencia")
									strong Portal de Transparencia de la DGE
									p(class="texto_banner") Portal dedicado a transparencia y acceso a datos abiertos de la Delegación General de Estudiantes

							li(class="banner_container model-resaltado-02 showtext")
								a(class="banner", href="http://secretariageneral.ugr.es/bougr/")
									strong Boletín UGR
									p(class="texto_banner") Boletín Oficial de la Universidad de Granada

							li(class="banner_container model-resaltado-02 showtext")
								a(class="banner", href="http://secretariageneral.ugr.es/pages/memorias/academica/20142015/_doc/resumenestadistica/")
									strong La UGR en cifras
									p(class="texto_banner") Documento con el resumen estadístico de la Memoria Académica 2014-2015 de la Universidad de Granada

				#interior_pie
					#pie
						a(id="WAI", href="http://www.w3.org/WAI/WCAG2AA-Conformance")
							img(src="/imagenes/wcag2aa.gif", id="wcag2aa", alt="wcag2aa", longdesc="http://www.w3.org/WAI/WCAG2AA-Conformance")
						a(href="mapaWeb.html") Mapa del sitio
						span.separador_enlaces |
						a(href="https://github.com/oslugr/ugr-transparente-servidor") Este servidor es software libre
						span.separador_enlaces |
						a(href="http://www.gnu.org/licenses/gpl-3.0.html") Liberado bajo GPL v3.0
						span.separador_enlaces  |
						a(class="contactar", href="http://www.ugr.es/pages/contacto", target="_blank") Contacto
						span.separador_enlaces |
						a(href="https://github.com/oslugr/ugr-transparente-servidor/issues", target="_blank") Ir a sugerencias
						//span.separador_enlaces  |
						//a(class="validador", href="#") Accesibilidad
						//span.separador_enlaces  |
						//a(class="privacidad", href="#") Política de privacidad
						p
							a(href="http://www.ugr.es/pages/creditos") &copy; 2016
							span.separador_enlaces |
							a(href="http://www.ugr.es")  Universidad de Granada

		script(src='/lib/lightbox2/dist/js/lightbox-plus-jquery.js')
