extends layout
include tablas.jade
include menu.jade

block content
	#rastro-idiomas
		#rastro
			ul#rastro_breadcrumb
				li.first
				span.first Administración / #{seccion}
	#general
		+ menu("Personal")

		#pagina
			h1#titulo_pagina
				span.texto_titulo #{seccion}

			div(id="contenido", class="sec_interior")
				.content_doku

					ul.enlaces
						li.level1
							each valor in contenido
								if valor.seccion == ""
									.li
										a(class="enlaces-cabecera" href="##{valor.link}") #{valor.encabezado}
							.li
								a(class="enlaces-cabecera" href=null) Personal Docente e Investigador
							ul.enlaces
								li.level2
									each valor in contenido
										if valor.seccion == "pdi"
											.li
												a(class="enlaces-cabecera" href="##{valor.link}") #{valor.encabezado}
							.li
								a(class="enlaces-cabecera" href=null) Personal de Administración y Servicios
							ul.enlaces
								li.level2
									each valor in contenido
										if valor.seccion == "pas"
											.li
												a(class="enlaces-cabecera" href="##{valor.link}") #{valor.encabezado}


					+ generar_tablas(contenido,datos)
