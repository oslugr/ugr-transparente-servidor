extends layout
include tablas.jade
include menu.jade

block content
	#rastro-idiomas
		#rastro
			ul#rastro_breadcrumb
				li.first
					span.first Administración / #{seccion}
	#general
		+ menu("Información Económica")
		#pagina
			h1#titulo_pagina
				span.texto_titulo #{seccion}

			div(id="contenido", class="sec_interior")
				.content_doku

					ul.enlaces
						li.level1
							.li
								a(class="enlaces-cabecera" href=null) Año 2016
							ul.enlaces
								li.level2
									each valor in contenido
										if valor.seccion == "2016"
											.li
												a(class="enlaces-cabecera" href="##{valor.link}") #{valor.encabezado}

						li.level1
							.li
								a(class="enlaces-cabecera" href=null) Año 2015
							ul.enlaces
								li.level2
									each valor in contenido
										if valor.seccion == "2015"
											.li
												a(class="enlaces-cabecera" href="##{valor.link}") #{valor.encabezado}

						li.level1
							.li
								a(class="enlaces-cabecera" href=null) Año 2014
							ul.enlaces
								li.level2
									each valor in contenido
										if valor.seccion == "2014"
											.li
												a(class="enlaces-cabecera" href="##{valor.link}") #{valor.encabezado}

						li.level1
							each valor in contenido
								if valor.seccion == ""
									.li
										a(class="enlaces-cabecera" href="##{valor.link}") #{valor.encabezado}

					+ generar_tablas(contenido,datos)
