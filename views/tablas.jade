mixin generar_tablas (contenido,datos)
	each valor in contenido
		case valor.tipo
			when 1
				+ table1(valor,datos)
			when 2
				+ table2(valor,datos)
			when 3
				+ table3(valor,datos)
			when 4
				+ table4(valor,datos)
