extends layout

block content
	#rastro-idiomas
		#rastro
			ul#rastro_breadcrumb
				li.first
				span.first Administración / #{seccion}
	#general
		#menus
			- var mode1 = "tipo2 item-first_level"
			- var mode2 = "tipo2 item-first_level"
			- var mode3 = "selected tipo2-selected item-first_level"
			- var mode4 = "tipo2 item-first_level"
			- var mode5 = "tipo2 item-first_level"
			- var mode6 = "tipo2 item-first_level"
			- var mode7 = "tipo2 item-first_level"

			- var submenu1_display = ""
			- var submenu2_display = "display:none;"
			- var submenu3_display = "display:none;"

			- var item1_selected = "tipo1-selected"
			- var item2_selected = "tipo1"
			- var item3_selected = "tipo1"

			- var item4_selected = "tipo1"
			- var item5_selected = "tipo1"
			- var item6_selected = "tipo1"

			- var item7_selected = "tipo1"
			- var item8_selected = "tipo1"

			include ./menu.jade
		#pagina
			h1#titulo_pagina
				span.texto_titulo #{seccion}

			div(id="contenido", class="sec_interior")
				.content_doku

					ul.enlaces
						li.level1
							.li
								a(class="enlaces-cabecera" href=null) Personal Docente e Investigador
							ul.enlaces
								li.level2
									each valor in contenido
										if valor.seccion == "pdi"
											.li
												a(class="enlaces-cabecera" href="##{valor.link}") #{valor.encabezado}
							.li
								a(class="enlaces-cabecera" href=null) Personal de Administración y Servicios
							ul.enlaces
								li.level2
									each valor in contenido
										if valor.seccion == "pas"
											.li
												a(class="enlaces-cabecera" href="##{valor.link}") #{valor.encabezado}

					each valor in contenido
						h1
							a(id="#{valor.link}", name="__doku_encabezado_de_primer_nivel") #{valor.encabezado}

						.level1
							p #{valor.texto}

							table.inline
								colgroup
									col(span='1', style='width: 90%;')
									col(span='1', style='width: 10%;')
								tbody
									tr
										case valor.tipo
											when 1
												th.centeralign Descripción
												th.centeralign Datos en Opendata
												th.centeralign Ver
												th.centeralign Descargar
											when 2
												th.centeralign Descripción
												th.centeralign Enlace
											when 3
											when 4
												th.centeralign Descripción
												th.centeralign Ver
												th.centeralign Descargar

									each elemento in datos
										if elemento.dataset==valor.encabezado
											tr
												case elemento.tipo
													when 1
														td(class="centeralign par") #{elemento.nombre}
														td(class="centeralign impar")
															a(href="#{servidor}dataset/#{elemento.id_dataset}/resource/#{elemento.url}",target="_blank")
																img(class="link",src="imagenes/link.png", alt="link")
														td(class="centeralign par")
															a(href="#dialog" class="view" rel="#{servidor}dataset/#{elemento.descarga}" name="#{elemento.nombre}")
																img(class="view",src="imagenes/view.png", alt="view")
														td(class="centeralign impar")
															a(href="#{servidor}dataset/#{elemento.descarga}")
																img(class="save",src="imagenes/save.png", alt="save")
													when 2
														td(class="centeralign par") #{elemento.nombre}
														td(class="centeralign impar")
															a(href="#{elemento.url}",target="_blank")
																img(class="link",src="imagenes/link2.png", alt="link")
													when 3
														td(class="centeralign par") #{elemento.nombre}
														td(class="centeralign impar")
															a(href="doc/#{elemento.url}",target="_blank")
																img(class="view",src="imagenes/pdf.png", alt="view")
														td(class="centeralign par")
															a(href="doc/#{elemento.url}", download="")
																img(class="save",src="imagenes/flecha.png", alt="save")
													when 4
														td(class="centeralign par") #{elemento.nombre}
														td(class="centeralign impar")
															a(href="graph/#{elemento.url}", data-lightbox="image-1", data-title="#{elemento.nombre}")
																img(class="view",src="imagenes/grafico.png", alt="view")
														td(class="centeralign par")
															a(href="graph/#{elemento.url}", download="")
																img(class="save",src="imagenes/flecha.png", alt="save")
